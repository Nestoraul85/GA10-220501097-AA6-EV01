<div class=" block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Registro de Niños y Niñas</h1>



    <form id="formulario1" action="listadosninos" method="GET" class="" name="formulario">

        <input type="text" name="name" placeholder="Nombres"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="text" name="apellidos" placeholder="Apellidos"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="text" name="RN" placeholder="Registro de nacimiento"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="date" name="FN" placeholder="Fecha de Nacimiento"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="text" name="FN" placeholder="Edad"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <input type="text" name="sexo" placeholder="Sexo"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            required>

        <h3 class="text-center">Niveles</h3>

        <button type="submit"
            class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 haver:bg-green-600 focus:bg-green-700">Parvulos</button>

        <button type="submit"
            class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 haver:bg-green-600 focus:bg-green-700">Pre-Jardin</button>

        <button type="submit"
            class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 haver:bg-green-600 focus:bg-green-700">Jardin</button>
</div>